@page "/datepicker"

    <EditForm Model="@_exampleModel" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <InputText @bind-Value="_exampleModel.Name" class="form-control" />
        </div>

        <div class="form-group">
            <Datepicker>
                <InputText @bind-Value="_exampleModel.Birthdate" class="form-control datepicker" />
            </Datepicker>
        </div>

        <div class="form-group">
            <MaskedInput>
                <InputText @bind-Value="_exampleModel.Number" class="form-control masked" data-pattern="99-9999999" />
            </MaskedInput>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </EditForm>

@code {
    private ExampleModel _exampleModel = new ExampleModel();

    private void HandleValidSubmit()
    {
        Console.WriteLine("OnValidSubmit");
    }
}